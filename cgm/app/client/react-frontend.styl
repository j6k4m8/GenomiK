.collapsible:hover
  background-color white

.logo:hover
  background-color white !important

.sub-nav
  line-height space-medium !important
  vertical-align middle !important
  height space-medium !important

.nav-header.active
  background-color secondary-color

.nav-element
  height space-large*1.1
  line-height space-large !important
  vertical-align middle !important

.top-nav
  height space*4
  line-height space*4
  vertical-align middle
  font-size space*1.2

.main-content
  padding-top space

.clickable
  cursor pointer

